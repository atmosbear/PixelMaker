{
    "compileOnSave": true,
    "files": [
        "./index.ts"
    ],
    "compilerOptions": {
        "target": "ES5",
        "module": "ES2015",
        "sourceMap": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "outDir": "dist/"
    },
    "exclude": [
        "node_modules",
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "jspm_packages" : true,
        "./**/node_modules/**" : true
    }
}